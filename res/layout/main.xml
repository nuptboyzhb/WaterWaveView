<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal" >
    <net.mobctrl.waterwave.WaterWaveView
        android:id="@+id/wwv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true" />
    <SeekBar
        android:id="@+id/seek_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:max="100"
        android:progress="0" />
    <SeekBar
        android:id="@+id/seek_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar1"
        android:layout_margin="15dp"
        android:max="100"
        android:progress="0" />
    <SeekBar
        android:id="@+id/seek_bar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar2"
        android:layout_margin="15dp"
        android:max="100"
        android:progress="0" />
    <SeekBar
        android:id="@+id/seek_bar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar3"
        android:layout_margin="15dp"
        android:max="100"
        android:progress="0" />
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar4"
        android:gravity="center"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>